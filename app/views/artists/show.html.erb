<%= link_to "Back to Bands Index", bands_path %>
<h1 class="centered"><%= @artist.name %></h1>
<p class="centered">
	<%= link_to "Edit", edit_artist_path(@artist) %> / <%= link_to "Delete", artist_path(@artist), method: :delete, data: { confirm: 'Are you sure you want to delete this artist?' } %>
</p>
<p>
	<b>Band: </b><%= link_to @artist.band.name, band_path(@artist.band) %>
</p>
<p>
	<b>Role: </b><%= @artist.role %>
</p>
<p>
	<b>Biography: </b><%= @artist.biography %>
</p>
<p>
	<b>Birthday: </b><%= @artist.birthday.strftime("%B %d, %Y") if @artist.birthday.present? %>
</p>
<p>
	<b>Joined date: </b><%= @artist.join_date.strftime("%B %d, %Y") if @artist.join_date.present? %>
</p>
