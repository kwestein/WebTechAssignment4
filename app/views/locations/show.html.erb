<div class="padded">
	<%= link_to "Back to Bands Index", bands_path %>
	<div class="container">
		<h2 class="title centered"><%= @location.venue %></h2>
		<p class="centered">
			<%= link_to "Edit", edit_location_path(@location) %> / 
			<%= link_to "Delete", location_path(@location), method: :delete, data: { confirm: 'Are you sure you want to delete this venue?' } %>
		</p>
		<div class="top-margined">
			<b>Street Address: </b><%= @location.street_address %>
		</div>
		<div class="top-margined">
			<b>City: </b><%= @location.city %>
		</div>
		<div class="top-margined">
			<b>Country: </b><%= @location.country %>
		</div>
		<div class="top-margined">
			<b>Continent: </b><%= @location.continent %>
		</div>
	</div>
</div>