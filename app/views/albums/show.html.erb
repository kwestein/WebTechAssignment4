<div style="padding:20px;">
	<%= link_to "Back to Bands Index", bands_path %>
	<div style=" background-color:#D0D0D0; padding: 10px">
		<h2 style="text-decoration:underline; margin-bottom:0; text-align:center"><%= @album.title %></h2>
		<p style="text-align:center">
			<%= link_to "Edit", edit_album_path(@album) %> / 
			<%= link_to "Delete", album_path(@album), method: :delete, data: { confirm: 'Are you sure you want to delete this album?' } %>
		</p>
		<div style="margin: 5px 0 0 0">
			<b>Title: </b><%= @album.title %>
		</div>
		<div style="margin: 5px 0 0 0">
			<b>Release Date: </b><%= @album.release_date.strftime("%B %d, %Y") if @album.release_date.present? %>
		</div>
		<div style="margin: 5px 0 0 0">
			<b>Band: </b><%= @album.band.name %>
		</div>
		<b><u>Songs:</u></b>
		<ul>
			<% @album.songs.each do |song| %>
				<li><%= "#{song.title}, ranking: #{song.ranking}" %></li>
			<% end %>
		</ul>
	</div>
</div>