<div class="padded">
	<%= render partial: 'common/application_header' %>
	<div class="container">
		<h2 class="title centered"><%= @show.title %></h1>
		<p class="centered">
			<%= link_to "Edit", edit_show_path %> / 
			<%= link_to "Delete", show_path(@show), method: :delete, data: { confirm: 'Are you sure you want to delete this show?' } %>
		</p>
		<p>
			<b>Date: </b><%= @show.date.strftime("%B %d, %Y") if @show.date.present? %>
		</p>
		<p>
			<b>Venue: </b><%= @show.location.venue %>
		</p>
		<p>
			<b>Location: </b><%= "#{@show.location.street_address}, #{@show.location.city}, #{@show.location.country}, #{@show.location.continent}" %>
		</p>
		<p>
			<b>Performer: </b><%= Band.find(@show.band_id).name %>
		</p>
	</div>
</div>